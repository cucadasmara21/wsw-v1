# Entorno
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL required for TITAN V8)
# Docker Compose uses the standard Postgres port mapping 5432:5432.
# For SQLAlchemy (sync) use psycopg2 driver:
DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:5432/wsw_db
# For container-to-container networking (Docker):
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@wsw-postgres:5432/wsw_db
# Async DSN for asyncpg (auto-normalized from DATABASE_URL if not set)
# DATABASE_DSN_ASYNC=postgresql://postgres:postgres@127.0.0.1:5432/wsw_db

# Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# Universe Configuration
UNIVERSE_TARGET_COUNT=10000
ENABLE_PARTITIONS=false
# P-04 VoidPool: set true to use ABA-safe slot recycling in sovereign materialization
# ENABLE_VOIDPOOL=false

# Neo4j (opcional)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# Seguridad
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Trusted Hosts
TRUSTED_HOSTS=localhost,127.0.0.1